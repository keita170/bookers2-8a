<body>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

            <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th><%= link_to @user.following_user.count, user_followings_path(@user) %></th>
          </tr>
          <tr>
            <th>followers</th>
            <th><%= link_to @user.follower_user.count, user_followers_path(@user) %></th>
          </tr>
        </table>
        <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
        <span class="fas fa-user-cog"></span>
        <% end %>
        <h2>New book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>

      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-inverse">
          <thead>
           <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
            <th></th>
            <th></th>
           </tr>
          </thead>
          <tbody>
           <% @users.each do |user| %>
           <tr>
             <th>
               <%= attachment_image_tag user, :profile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
               </th>
             <th><%= user.name %></th>
             <th><p>フォロー数:<%= user.following_user.count %></p></th>
             <th><p>フォロワー数:<%= user.follower_user.count %></p></th>
             <th>
               <% if user == current_user %>
               <% else %>
                  <% if current_user.following?(user) %>
                    <%= link_to "フォローを外す", user_relationship_path(id: user.id, user_id: user.id), method: :delete %>
                  <% else %>
                    <%= link_to "フォローする", user_relationships_path(id: user.id, user_id: user.id), method: :post %>
                  <% end %>
               <% end %>
               
             </th>
             <th><%= link_to "Show", user_path(user.id) %></th>
           </tr>
           <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</body>